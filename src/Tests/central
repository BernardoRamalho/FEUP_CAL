int max = 0, curr = 0;
            int vertex = 0;
            Graph aux = *graph;
            for(auto vert : graph->getVertexSet()) {
                aux.preProcess(vert);
                curr = aux.getVertexSet().size();
                if(curr > max) {
                    max = curr;
                    vertex = vert->getId();
                }
                aux = *graph;
            }
            cout << endl << max << endl;
            cout << vertex << endl;

this calculates the vertex that leads to most edges in the connectivity
